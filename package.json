{
  "name": "safe-client",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev:server": "nodemon -e ts -w . -x ts-node ./src/server",
    "dev:client": "nodemon -e ts -w . -x npm run start-client-dev",
    "dev": "run-p dev:* --print-label",
    "build": "tsc",
    "start": "yarn dev",
    "start-client-dev": "wait-on tcp:2021 && ts-node ./src/client",
    "test-dev": "start-server-and-test 'ts-node src/server' 2021 'ts-node src/client'",
    "test-start": "start-server-and-test 'node dist/server' 2021 'node dist/client'"
  },
  "devDependencies": {
    "@tanstack/react-query": "^4.29.1",
    "@trpc/client": "^10.19.1",
    "@trpc/next": "^10.19.1",
    "@trpc/react-query": "^10.19.1",
    "@trpc/server": "^10.19.1",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "ts-node": "^10.3.0",
    "tsc": "^2.0.4",
    "typescript": "^5.0.4",
    "wait-on": "^6.0.0",
    "zod": "^3.21.4"
  }
}
